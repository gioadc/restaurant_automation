<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default" namespace="/">
        <action name="" class="sample.struts.IndexAction">
            <result name="manager" type="redirectAction">manager</result>
            <result name="host" type="redirectAction">host</result>
            <result name="waiter" type="redirectAction">waiter</result>
            <result name="chef" type="redirectAction">chef</result>
            <result name="busboy" type="redirectAction">busboy</result>
            <result name="fail">login.jsp</result>
        </action>
        <action name="index" class="sample.struts.IndexAction">
            <result name="manager" type="redirectAction">manager</result>
            <result name="host" type="redirectAction">host</result>
            <result name="waiter" type="redirectAction">waiter</result>
            <result name="chef" type="redirectAction">chef</result>
            <result name="busboy" type="redirectAction">busboy</result>
            <result name="fail">login.jsp</result>
        </action>
    </package>
    <package name="manager" extends="struts-default" namespace="/manager">
        <action name="index" class="sample.struts.IndexAction">
            <result name="fail" type="redirect">../login.jsp</result>
        </action>
    </package>
    <package name="host" extends="struts-default" namespace="/host">
        <action name="index" class="sample.struts.IndexAction">
            <result name="fail" type="redirect">../login.jsp</result>
        </action>
    </package>
    <package name="waiter" extends="struts-default" namespace="/waiter">
        <action name="index" class="sample.struts.IndexAction">
            <result name="fail" type="redirect">../login.jsp</result>
        </action>
    </package>
    <package name="chef" extends="struts-default" namespace="/chef">
        <action name="index" class="sample.struts.IndexAction">
            <result name="fail" type="redirect">../login.jsp</result>
        </action>
        <action name="updateChefID" class="chef.UpdateChefIDAction">
<!--            <result name="success">index</result>-->
        </action>
    </package>
    <package name="busboy" extends="struts-default" namespace="/manager">
        <action name="index" class="sample.struts.IndexAction">
            <result name="fail" type="redirect">../login.jsp</result>
        </action>
    </package>
</struts>
